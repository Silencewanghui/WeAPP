.container{
    justify-content: flex-start;
    align-items: stretch;
    background: #f9fafc;
    height: 100%;
    padding: 0;
    padding-bottom: 20rpx;
}
.book-banner{
    height: 240px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #e5e6e8;
}
.book-cover{
    width: 150px;
    height: 180px;
}
.book-brief{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 50rpx 40rpx;
}
.book-info{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}
.book-name{
    font-size: 18px;
    font-weight: bold;
}
.book-author,.book-translator,.book-publisher,.book-pubdate{
    font-size: 12px;
    margin-top: 7rpx;
    color: #666666;
}
.book-rate{
    width: 130rpx;
    height: 130rpx;
    box-shadow: 0 0 10px 1px #d2d4d8;
    background: #ffffff;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}
.book-average{
    font-size: 18px;
    font-weight: bold;
}
.book-numRaters{
    font-size: 12px;
    color: #999999;
}
.book-abstract,.author-abstract{
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
    padding:0 30rpx;
}
.abstract-title{
    font-size: 12px;
    color: #666666;
}
.abstract-content{
    margin-top: 20rpx;
    font-size: 13px;
    line-height: 60rpx;
}